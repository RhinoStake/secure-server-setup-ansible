[Unit]
Description={{ chain_id }} Signer node {{ my_share }}
After=network.target

[Service]
Type=simple
User={{ ansible_user }}
WorkingDirectory={{ user_dir }}
ExecStart={{ user_dir }}/go/bin/horcrux {% if shares > 1 %}co{% endif %}signer start --home {{ horcrux_dir }}
Restart=on-failure
RestartSec=3
LimitNOFILE=4096

[Install]
WantedBy=multi-user.target