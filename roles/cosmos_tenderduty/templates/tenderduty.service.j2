{% if threshold_type is defined and threshold_type == 'high'  %}
{% set threshold = "40" %}
{% else %}
{% set threshold = "10" %}
{% endif %}
[Unit]
Description={{ network }} Tenderduty
After=network-online.target

[Service]
User={{ ansible_user }}
ExecStart={{ user_dir }}/go/bin/tenderduty -p {{ pagerduty_key }} -c {{ key }} -u http://{{ target_ip }}:{{ custom_port_prefix }}57 -threshold {{ threshold }} -alert-unavailable
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target